@{
    ViewData["Title"] = "Agents";
}
@model AgentPortal.ViewModels.Home.HomeViewModel

<div class="text-center">
    <h2 style="text-align: left">Agents</h2>
        
    <button id="new-agent-btn" class="btn btn-secondary" onclick="window.location.href = '/agents/newagent';">Add Agent</button>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>AgentCodes</th>
                <th>AgentName</th>
                <th>WorkPlace</th>
                <th>Commission</th>
                <th>PhoneNo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agent in Model.Agents)
            {
            <tr>
                <td><a href="/agents/agent/@agent.AgentCode">@agent.AgentCode</a></td>
                <td>@agent.AgentName</td>
                <td>@agent.WorkingArea</td>
                <td>@agent.Commission</td>
                <td>@agent.PhoneNo</td>
            </tr>
            }
        </tbody>
    </table>
</div>

<style>
    #new-agent-btn {
        margin: 15px 15px;
    }
</style>
